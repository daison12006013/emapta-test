{
    "name": "daison/emapta-paysera-exam",
    "description": "This is my examination to paysera's exam over emapta company.",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "Daison\\Paysera\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Daison\\Paysera\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.0",
        "ext-bcmath": "*",
        "phplucidframe/console-table": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "friendsofphp/php-cs-fixer": "2.16"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test": ["@phpunit", "@test-cs"]
    }
}
